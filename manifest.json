{

    "manifest_version": 2,
    "name": "WorkGarden",
    "version": "1.0",
  
    "description": "Motivates to not waste time on the internet, by growing your own personal garden.",
  

    "background": { "scripts": ["background.js"] },
    "browser_action":{
        "default_popup":"popup.html",
        "script":"popup.js"
    },
    "icons":{
        "16":"icons/icon16.png",
        "32":"icons/icon32.png",
        "48":"icons/icon48.png",
        "128":"icons/icon128.png"
    },
    "options_ui":{ 
        "page": "options.html"
    },
    "permissions": [
        "tabs"
    ]
        
    
    
    
  
  }
  